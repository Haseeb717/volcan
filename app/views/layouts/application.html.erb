<!DOCTYPE html>
<html>
  <head>
    <title>Volcan</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default mynav">
       <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
             <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
             <span class="sr-only">Toggle navigation</span>
             <span class="icon-bar top-bar"></span>
             <span class="icon-bar middle-bar"></span>
             <span class="icon-bar bottom-bar"></span>
             </button>
             <%= link_to root_path,:class=>"logotext" do %>
              <%= image_tag "trace360-logo.png",:width=>"100" %>
             <% end %>
          </div>
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
                <% if current_user.role.title == "ADMIN" %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">FINCA <span class="fa fa-angle-down"></span></a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "Create New Finca", new_finca_path %></li>
                      <li><%= link_to 'All Fincas', fincas_path %></li> 
                    </ul>
                  </li>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">RECEIPT <span class="fa fa-angle-down"></span></a>
                    <ul class="dropdown-menu">
                      <li><%= link_to "New Reciept", new_scala_path %></li>
                      <li><%= link_to 'All Reciepts', scalas_path %></li> 
                    </ul>
                  </li>
                <% end %>
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete%></li>
              <% else %>
                <li><%= link_to "Login", new_user_session_path %></li>
              <% end %>
            	 
                
            </ul>
          </div>
          <!-- /.navbar-collapse -->
       </div>
       <!-- /.container-fluid -->
    </nav>

    <!-- Header -->
    
        <%= yield %>
      
  </body>
</html>
