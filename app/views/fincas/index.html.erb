
<!-- ProviderPage -->
<div class="ProviderPage">
  <div class="container">  
    <h3>Fincas</h3>

    <div class="table-responsive border0">
      <table class="table table-striped custab table-hover">
        <thead>
          <tr>
            <th>Title</th>
            <th>Region</th>
            <th>Variety</th>
            <th>Altitude</th>
            <th>Notes</th>
            <th colspan="3"></th>
          </tr>
        </thead>
          <% @fincas.each do |finca| %>
            <tr>
              <td><%= finca.finca %></td>
              <td><%= finca.region.title if finca.region %></td>
              <td><%= finca.variety.title if finca.variety %></td>
              <td><%= finca.altitude.title if finca.altitude %></td>
              <td><%= finca.notes %></td>

              <td><%= link_to 'Show', finca %></td>
              <td><%= link_to 'Edit', edit_finca_path(finca) %></td>
              <td><%= link_to 'Destroy', finca, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
      </table>
    </div>
    <br>

    <%= link_to 'New Finca', new_finca_path %>  
  </div>
</div>
<!-- ProviderPage -->
